<div>
  <div>
    <h1>
      List of all habits
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new habit
    </h2>

    <form action="/insert_habit" method="post">
      <div>
        <label for="created_at_box">
          Created at
        </label>

        <input type="datetime-local" id="created_at_box" name="query_created_at">
      </div>

      <div>
        <label for="updated_at_box">
          Updated at
        </label>

        <input type="datetime-local" id="updated_at_box" name="query_updated_at">
      </div>

      <div>
        <label for="habit_name_box">
          Habit name
        </label>

        <input type="text" id="habit_name_box" name="query_habit_name">
      </div>

      <div>
        <label for="habit_description_box">
          Habit description
        </label>

        <textarea id="habit_description_box" name="query_habit_description" rows="3"></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create habit
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
          Habit name
        </th>

        <th>
          Habit description
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_habits.each do |a_habit| %>
      <tr>
        <td>
          <%= a_habit.id %>
        </td>

        <td>
          <%= a_habit.created_at %>
        </td>

        <td>
          <%= a_habit.updated_at %>
        </td>

        <td>
          <%= a_habit.habit_name %>
        </td>

        <td>
          <%= a_habit.habit_description %>
        </td>

        <td>
          <%= a_habit.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_habit.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_habit.updated_at) %> ago
        </td>

        <td>
          <a href="/habits/<%= a_habit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
