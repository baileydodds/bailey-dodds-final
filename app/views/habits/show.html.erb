<div>
  <div>
    <h1>
      Habit #<%= @the_habit.id %> details
    </h1>

    <div>
      <div>
        <a href="/habits">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_habit/<%= @the_habit.id %>">
          Delete habit
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <dd>
        <%= @the_habit.created_at %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= @the_habit.updated_at %>
      </dd>

      <dt>
        Habit name
      </dt>
      <dd>
        <%= @the_habit.habit_name %>
      </dd>

      <dt>
        Habit description
      </dt>
      <dd>
        <%= @the_habit.habit_description %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_habit.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_habit.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_habit.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit habit
    </h2>

    <form action="/modify_habit/<%= @the_habit.id %>"  method="post" >
      <div>
        <label for="created_at_box">
          Created at
        </label>

        <input type="datetime-local" id="created_at_box" name="query_created_at"
         value="<%= @the_habit.created_at %>">
      </div>

      <div>
        <label for="updated_at_box">
          Updated at
        </label>

        <input type="datetime-local" id="updated_at_box" name="query_updated_at"
         value="<%= @the_habit.updated_at %>">
      </div>

      <div>
        <label for="habit_name_box">
          Habit name
        </label>

        <input type="text" id="habit_name_box" name="query_habit_name" value="<%= @the_habit.habit_name %>">
      </div>

      <div>
        <label for="habit_description_box">
          Habit description
        </label>

        <textarea id="habit_description_box" name="query_habit_description"><%= @the_habit.habit_description %></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_habit.user_id %>">
      </div>

      <button>
        Update habit
      </button>
    </form>
  </div>
</div>

<hr>
