<div>
  <div>
    <h1>
      Performance #<%= @the_performance.id %> details
    </h1>

    <div>
      <div>
        <a href="/performances">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_performance/<%= @the_performance.id %>">
          Delete performance
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <dd>
        <%= @the_performance.created_at %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= @the_performance.updated_at %>
      </dd>

      <dt>
        Habit
      </dt>
      <dd>
        <%= @the_performance.habit_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_performance.user_id %>
      </dd>

      <dt>
        Performed on
      </dt>
      <dd>
        <%= @the_performance.performed_on %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_performance.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_performance.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit performance
    </h2>

    <form action="/modify_performance/<%= @the_performance.id %>"  method="post" >
      <div>
        <label for="created_at_box">
          Created at
        </label>

        <input type="datetime-local" id="created_at_box" name="query_created_at"
         value="<%= @the_performance.created_at %>">
      </div>

      <div>
        <label for="updated_at_box">
          Updated at
        </label>

        <input type="datetime-local" id="updated_at_box" name="query_updated_at"
         value="<%= @the_performance.updated_at %>">
      </div>

      <div>
        <label for="habit_id_box">
          Habit
        </label>

        <input type="text" id="habit_id_box" name="query_habit_id" value="<%= @the_performance.habit_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_performance.user_id %>">
      </div>

      <div>
        <label for="performed_on_box">
          Performed on
        </label>

        <input type="date" id="performed_on_box" name="query_performed_on" value="<%= @the_performance.performed_on %>">
      </div>

      <button>
        Update performance
      </button>
    </form>
  </div>
</div>

<hr>
